<div class="flex flex-col md:flex-row md:justify-center md:gap-20">
  <div class="flex flex-col gap-4">
    <div class="block relative"> 
      <%= form.label :title, class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2" %>
      <%= form.text_field :title, class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0" %>
    </div>
    <div class="block relative mb-14"> 
      <%= form.label :description, class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2" %>
      <%= form.rich_text_area :description, class: "mb-4"%>
    </div>
    <%= render \
        "shared/image_field",
        form: form,
        attribute: :cover_photo,
        label: t(".cover_photo") %>
    <div class="relative flex"> 
      <div class="flex flex-col">
        <div class="block relative"> 
          <%= form.label :price, class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2" do%>
            Price NRS
          <% end%>
          <%= form.text_field(
            :price,
            inputmode: :numeric,
            class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0"
          )%>
        </div>
      </div>
    </div>
    <div class="block relative"> 
      <%= form.label :condition, class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2" %>
      <%= form.select :condition, Listing.human_enum_options(:condition), {}, class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0" %>
    </div>
    <div class="block relative">
      <%= render "tags_field", form: form %>
    </div>
  </div>
  <div class="field flex flex-col gap-4">
    <%= form.label :address, class: "block text-gray-700 cursor-text text-md leading-[140%] font-normal mb-2" %>
    <%= render "addresses/fields", form: form %>
  </div>
</div>
