<div 
  class="flex flex-col gap-2"
  data-controller="tags"
>
  <%= form.label :tags, class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal" %>
  <p class="mb-2">
    <%= t(".description") %>
  </p>
  <div
    class="mb-2"
    data-tags-target="container"
  >
    <% form.object.tags.each do |value| %>
      <%= render "tag", value: value, form: form %>
    <% end if form.object.tags.present? %>
  </div>
  <div class="flex gap-2 w-full">
    <div class="control">
      <%= text_field_tag nil, nil,
        data: { tags_target: "input" }, class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0" %>
    </div>
    <div class="control">
      <button 
        class="button is-info bg-black text-white border-none rounded-md p-2 font-bold cursor-pointer hover:bg-gray-500"
        type="button"
        data-action="tags#addTag"
      >
        <%= t(".add_tag") %>
      </button>
    </div>
  </div>
  <%= tag.p class: "error-text" do %>
    <%= form.object.errors.messages_for(:tags).to_sentence %>
  <% end if form.object.errors.include?(:tags) %>
  <template data-tags-target="template">
    <%= render "tag", value: "{value}", form: form %>
  </template>
</div>
