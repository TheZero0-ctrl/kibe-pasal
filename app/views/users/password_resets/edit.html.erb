<% content_for :title, t(".title") %>
<div
  class="max-w-md relative flex flex-col p-4 rounded-md text-black bg-white m-auto mt-10 md:mt-40"
>
  <div class="text-2xl font-bold mb-2 text-[#1e0e4b] text-center">
    <%= t(".title") %>
  </div>
  <%= form_with(
    model: @user,
    url: users_password_reset_path,
    method: :patch,
    class: "flex flex-col gap-3 mt-10"
  ) do |form| %>
    <div class="block relative"> 
      <%= form.label(
        :password,
        class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2"
      )%>
      <%= form.password_field(
        :password,
        class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px] text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] focus:ring-2 ring-offset-2  ring-gray-900 outline-0"
      )%>
    </div>
    <%= form.submit(
      t(".submit"),
      class: "bg-[#7747ff] w-max m-auto px-6 py-2 rounded text-white text-sm font-normal cursor-pointer"
    )%>
  <% end %>
</div>
